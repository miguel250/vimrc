#!/usr/bin/env bash

SCRIPTS_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$SCRIPTS_DIR/../"

declare -a binaries=("go" "yarn" "pip3")

for binary in "${binaries[@]}"
do
  if [ -z $(which $binary) ]
  then
    echo "${binary} needs to be installed"
    exit 1
  fi
done

cd $PROJECT_ROOT

yarn install
pip3 install --user --upgrade -r requirements.txt
